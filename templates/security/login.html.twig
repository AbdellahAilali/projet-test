{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    <link href="{{ asset('css/login.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}

    <div class="wrapper fadeInDown">
        <div id="formContent">
            <div class="fadeIn first">
                <img src="{{ asset('image/index.png') }}"  id="icon" alt="User Icon" />
            </div>
            <div class="form">
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group row  col-md-9">
                        <input type="email" class="form-control" id="username exampleInputEmail1"
                               aria-describedby="emailHelp" placeholder="Email" name="_username" value="{{ last_username }}">
                    </div>
                    <div class="form-group row col-md-9">
                        <input type="password" class="form-control" id="password exampleInputPassword1"
                               placeholder="Mot de passe" name="_password" >
                    </div>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <input type="submit" class="fadeIn fourth" value="Connexion">
                </form>
            </div>
        </div>
    </div>
{% endblock %}
