{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block stylesheets %} {{ parent()}} {% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="center">
        <div class="card">
            <div class="card-header">
                <h2>Connexion Ã  votre compte</h2>
            </div>
        </div>
        <div class="form">
            <form action="{{ path('login') }}" method="post">
                <div class="form-group row  col-md-9">
                    <label for="username exampleInputEmail1">Adresse email</label>
                    <input type="email" class="form-control" id="username exampleInputEmail1"
                           aria-describedby="emailHelp" placeholder="Enter email" name="_username" value="{{ last_username }}">
                </div>
                <div class="form-group row col-md-9">
                    <label for="password exampleInputPassword1">Mot de Passe</label>
                    <input type="password" class="form-control" id="password exampleInputPassword1"
                           placeholder="Password" name="_password" >
                </div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
        </div>
    </div>
{% endblock %}
