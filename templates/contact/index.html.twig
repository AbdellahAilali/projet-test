{% extends 'base.html.twig' %}

 {% block stylesheets %}
    {{ parent() }}
 {% endblock %}

{% block body %}
    {{ parent() }}
    <a href="{{ path('admin_interface') }}" class="btn btn-primary btn-lg square" role="button">Admin</a>
    <div class="center">
        <div class="card">
            <div class="card-header">
                <h2>Demande de contact</h2>
            </div>
        </div>
        <div class="form">
            {{ form_start(form, {'attr': {'id': 'form_contact'}}) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>
            <div class="form-group col-md-8">
                {{ form_widget(form.name) }}
            </div>
            <div class="form-group col-md-8">
                {{ form_widget(form.firstname) }}
            </div>
            <div class="form-group col-md-8">
                {{ form_widget(form.email) }}
            </div>
            <div class="form-group col-md-8">
                {{ form_widget(form.question) }}
            </div>
            <div class="lo col-12 col-lg-5 ">
                <button type="submit" class="btn btn-primary mb-2$" id="btnSubmit" name="Envoyer">Envoyer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}



